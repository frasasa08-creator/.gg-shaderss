{
  "name": "discord-bot-advanced",
  "version": "1.0.0",
  "description": "Bot Discord avanzato con sistema welcome, ticket e moderazione",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "monitor": "./monitor-bot.sh",
    "postinstall": "chmod +x monitor-bot.sh",
    "setup": "chmod +x monitor-bot.sh && pm2 start index.js --name discord-bot && pm2 start monitor-bot.sh --name bot-monitor && pm2 save",
    "deploy": "npm run postinstall && npm run setup"
  },
  "dependencies": {
    "canvas": "^2.11.2",
    "discord.js": "^14.24.2",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-session": "^1.17.3",
    "passport": "^0.7.0",
    "passport-discord": "^0.1.4",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "pg": "^8.11.3",
    "pm2": "^6.0.13",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "discord",
    "bot",
    "welcome",
    "ticket",
    "moderation"
  ],
  "author": "sasa",
  "license": "MIT"
}
